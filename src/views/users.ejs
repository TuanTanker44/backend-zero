<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home</title>
    <link rel="stylesheet" href="/css/users.css">
</head>
<body>
    <ul>
        <li><a href="/">Home</a></li>
        <li><a href="/form">Create User</a></li>
        <li><a href="/users">Users</a></li>
    </ul>
    <h2>List Users</h2>
    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Email</th>
                <th>City</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            <% users.forEach(function(user) {   %>
                <tr>
                    <td><%= user.id %></td>
                    <td><%= user.name %></td>
                    <td><%= user.email %></td>
                    <td><%= user.city %></td>
                    <td>
                        <button><a href="/update/<%= user.id %>">Edit</a></button>
                        <button>Delete</button>
                    </td>
                </tr>
            <%});   %>
        </tbody>
    </table>
    
</body>
</html>